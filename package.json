{
  "name": "orbit-ai",
  "displayName": "OrbitAI - AI Coding Assistant",
  "description": "Context-aware AI coding assistant powered by Claude. Features code understanding, bug fixing, refactoring, testing, and more.",
  "version": "1.0.1",
  "publisher": "khanhromvn",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/khanhromvn/orbit-ai.git"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "ai",
    "claude",
    "copilot",
    "coding assistant",
    "code generation",
    "refactoring",
    "testing",
    "documentation"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "orbit-ai-container",
          "title": "OrbitAI",
          "icon": "$(robot)"
        }
      ]
    },
    "views": {
      "orbit-ai-container": [
        {
          "type": "webview",
          "id": "websocketView",
          "name": "Chat"
        },
        {
          "id": "orbit-ai-collections",
          "name": "Collections"
        }
      ]
    },
    "commands": [
      {
        "command": "orbit-ai.startServer",
        "title": "OrbitAI: Start Server"
      },
      {
        "command": "orbit-ai.stopServer",
        "title": "OrbitAI: Stop Server"
      },
      {
        "command": "orbit-ai.restartServer",
        "title": "OrbitAI: Restart Server"
      },
      {
        "command": "orbit-ai.explainCode",
        "title": "OrbitAI: Explain Code",
        "icon": "$(question)"
      },
      {
        "command": "orbit-ai.fixCode",
        "title": "OrbitAI: Fix Code",
        "icon": "$(wrench)"
      },
      {
        "command": "orbit-ai.refactorCode",
        "title": "OrbitAI: Refactor Code",
        "icon": "$(rocket)"
      },
      {
        "command": "orbit-ai.generateTests",
        "title": "OrbitAI: Generate Tests",
        "icon": "$(beaker)"
      },
      {
        "command": "orbit-ai.addDocumentation",
        "title": "OrbitAI: Add Documentation",
        "icon": "$(book)"
      },
      {
        "command": "orbit-ai.editCode",
        "title": "OrbitAI: Edit Code",
        "icon": "$(edit)"
      },
      {
        "command": "orbit-ai.chat",
        "title": "OrbitAI: Chat",
        "icon": "$(comment)"
      },
      {
        "command": "orbit-ai.addFilesToCollection",
        "title": "Add Files to Collection"
      },
      {
        "command": "orbit-ai.removeFilesFromCollection",
        "title": "Remove Files from Collection"
      },
      {
        "command": "orbit-ai.collection.toggleFileSelection",
        "title": "Toggle File Selection"
      },
      {
        "command": "orbit-ai.collection.selectAllFiles",
        "title": "Select All Files"
      },
      {
        "command": "orbit-ai.collection.deselectAllFiles",
        "title": "Deselect All Files"
      },
      {
        "command": "orbit-ai.collection.selectAllFilesInFolder",
        "title": "Select All Files in Folder",
        "icon": "$(check-all)"
      },
      {
        "command": "orbit-ai.collection.unselectAllFilesInFolder",
        "title": "Unselect All Files in Folder",
        "icon": "$(close-all)"
      },
      {
        "command": "orbit-ai.collection.confirmFileManagement",
        "title": "Confirm Selection"
      },
      {
        "command": "orbit-ai.collection.cancelFileManagement",
        "title": "Cancel"
      },
      {
        "command": "orbit-ai.collection.searchFiles",
        "title": "Search Files",
        "icon": "$(search)"
      },
      {
        "command": "orbit-ai.collection.clearSearch",
        "title": "Clear Search",
        "icon": "$(clear-all)"
      },
      {
        "command": "orbit-ai.showServerPort",
        "title": "OrbitAI: Show Server Port Info"
      },
      {
        "command": "orbit-ai.connectToPort",
        "title": "OrbitAI: Connect to Specific Port"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "orbit-ai.editorMenu",
          "group": "1_modification"
        }
      ],
      "orbit-ai.editorMenu": [
        {
          "command": "orbit-ai.explainCode",
          "when": "editorHasSelection",
          "group": "1_understand"
        },
        {
          "command": "orbit-ai.fixCode",
          "when": "editorHasSelection",
          "group": "2_improve"
        },
        {
          "command": "orbit-ai.refactorCode",
          "when": "editorHasSelection",
          "group": "2_improve"
        },
        {
          "command": "orbit-ai.generateTests",
          "when": "editorHasSelection",
          "group": "3_generate"
        },
        {
          "command": "orbit-ai.addDocumentation",
          "when": "editorHasSelection",
          "group": "3_generate"
        },
        {
          "command": "orbit-ai.editCode",
          "when": "editorHasSelection",
          "group": "4_custom"
        },
        {
          "command": "orbit-ai.chat",
          "group": "4_custom"
        },
        {
          "command": "orbit-ai.addFilesToCollection",
          "when": "view == orbit-ai-collections && viewItem == collection",
          "group": "1_modification@1"
        },
        {
          "command": "orbit-ai.removeFilesFromCollection",
          "when": "view == orbit-ai-collections && viewItem == collection",
          "group": "1_modification@2"
        },
        {
          "command": "orbit-ai.collection.selectAllFilesInFolder",
          "when": "view == orbit-ai-collections && viewItem == fileManagementDirectory",
          "group": "inline@1"
        },
        {
          "command": "orbit-ai.collection.unselectAllFilesInFolder",
          "when": "view == orbit-ai-collections && viewItem == fileManagementDirectory",
          "group": "inline@2"
        }
      ],
      "commandPalette": [
        {
          "command": "orbit-ai.explainCode",
          "when": "editorHasSelection"
        },
        {
          "command": "orbit-ai.fixCode",
          "when": "editorHasSelection"
        },
        {
          "command": "orbit-ai.refactorCode",
          "when": "editorHasSelection"
        },
        {
          "command": "orbit-ai.generateTests",
          "when": "editorHasSelection"
        },
        {
          "command": "orbit-ai.addDocumentation",
          "when": "editorHasSelection"
        },
        {
          "command": "orbit-ai.editCode",
          "when": "editorHasSelection"
        }
      ]
    },
    "submenus": [
      {
        "id": "orbit-ai.editorMenu",
        "label": "OrbitAI"
      }
    ],
    "keybindings": [
      {
        "command": "orbit-ai.chat",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l"
      },
      {
        "command": "orbit-ai.explainCode",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorHasSelection"
      },
      {
        "command": "orbit-ai.fixCode",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "editorHasSelection"
      },
      {
        "command": "orbit-ai.editCode",
        "key": "ctrl+shift+k",
        "mac": "cmd+shift+k",
        "when": "editorHasSelection"
      }
    ],
    "configuration": {
      "title": "OrbitAI",
      "properties": {
        "orbitAI.maxContextTokens": {
          "type": "number",
          "default": 100000,
          "description": "Maximum number of tokens to include in context"
        },
        "orbitAI.autoFormatCode": {
          "type": "boolean",
          "default": true,
          "description": "Automatically format code after applying changes"
        },
        "orbitAI.previewChangesBeforeApplying": {
          "type": "boolean",
          "default": true,
          "description": "Show diff preview before applying code changes"
        },
        "orbitAI.includeOpenFiles": {
          "type": "boolean",
          "default": true,
          "description": "Include open files in context"
        },
        "orbitAI.includeDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Include errors and warnings in context"
        },
        "orbitAI.maxOpenFiles": {
          "type": "number",
          "default": 10,
          "description": "Maximum number of open files to include in context"
        },
        "orbitAI.serverPort": {
          "type": "number",
          "default": 3031,
          "description": "WebSocket server port"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.50.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "ws": "^8.18.3"
  }
}
